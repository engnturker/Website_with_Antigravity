---
const navItems = [
  { name: 'Features', href: '#features' },
  { name: 'Showcase', href: '#showcase' },
  { name: 'About', href: '#about' },
];
---

<header class="fixed top-0 left-0 w-full z-50 transition-all duration-300 backdrop-blur-md bg-glass-surface border-b border-glass-border">
  <div class="container mx-auto px-6 h-20 flex items-center justify-between">
    <a href="/" class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
      Antigravity
    </a>
    
    <nav class="hidden md:flex space-x-8">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-medium text-gray-300 hover:text-white transition-colors relative group">
          {item.name}
          <span class="absolute bottom-[-4px] left-0 w-0 h-0.5 bg-brand-gradient bg-gradient-to-r from-primary to-secondary transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
    </nav>

    <div class="hidden md:block">
      <a href="#" class="px-6 py-2 rounded-full text-sm font-medium bg-white/10 hover:bg-white/20 border border-white/10 transition-all text-white backdrop-blur-sm">
        Get Started
      </a>
    </div>

    <!-- Mobile menu button (placeholder) -->
    <button class="md:hidden text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</header>
