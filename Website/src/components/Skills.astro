---
const skillCategories = [
  {
    title: "Ağ ve İletişim",
    icon: "network",
    skills: ["CISCO", "HP/Aruba Switch", "Router Yapılandırma", "Wi-Fi", "P2P", "Wimax", "3G/4G", "VoIP"]
  },
  {
    title: "Sistem Yönetimi",
    icon: "server",
    skills: ["Windows Server", "VMware vSphere", "Active Directory", "DNS/DHCP", "DNS/IIS", "Veeam Backup"]
  },
  {
    title: "Güvenlik & CCTV",
    icon: "shield",
    skills: ["Fortinet Firewall", "Palo Alto Firewall", "Debian Proxy", "IP Kameralar", "CCTV Yönetimi"]
  },
  {
    title: "Yazılım & Tasarım",
    icon: "code",
    skills: ["HTML/CSS/JS", "PHP/ASP", "Photoshop", "Adobe Premiere Pro", "Web Tasarım", "Video Kurgu"]
  }
];
---

<section id="skills" class="py-24 relative overflow-hidden bg-dark/30">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500">
        Yetenekler & Uzmanlık
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Teknik altyapı, yazılım ve tasarım alanındaki uzmanlık seviyelerim.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {skillCategories.map((category) => (
        <div class="p-8 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-md hover:bg-white/10 transition-all group">
          <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <i data-lucide={category.icon} class="w-6 h-6 text-primary"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-6 underline decoration-primary decoration-4 underline-offset-8">
            {category.title}
          </h3>
          <ul class="space-y-3">
            {category.skills.map((skill) => (
              <li class="flex items-center text-gray-400 group-hover:text-gray-200 transition-colors">
                <span class="w-1.5 h-1.5 rounded-full bg-secondary mr-3"></span>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Refresh Lucide icons
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
</script>
