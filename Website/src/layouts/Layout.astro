---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Engin TÜRKER - Bilgi İşlem Sorumlusu & Sistem Network Uzmanı Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <script src="https://unpkg.com/lucide@latest"></script>
		<title>{title}</title>
	</head>
	<body class="bg-dark text-white font-sans antialiased selection:bg-primary selection:text-white overflow-x-hidden">
        <div class="fixed inset-0 z-[-1] pointer-events-none">
            <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900 via-[#0a0a0a] to-black"></div>
            <div class="absolute top-[-10%] left-[20%] w-[30rem] h-[30rem] bg-primary/20 rounded-full blur-[100px] opacity-40 animate-blob"></div>
            <div class="absolute top-[10%] right-[20%] w-[25rem] h-[25rem] bg-secondary/20 rounded-full blur-[100px] opacity-40 animate-blob animation-delay-2000"></div>
            <div class="absolute bottom-[-10%] left-[40%] w-[35rem] h-[35rem] bg-purple-500/10 rounded-full blur-[120px] opacity-30 animate-blob animation-delay-4000"></div>
        </div>
		<slot />
	</body>
</html>

<style is:global>
    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #0f172a;
    }
    ::-webkit-scrollbar-thumb {
        background: #334155;
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #475569;
    }
</style>
